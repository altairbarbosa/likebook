<Page
    x:Class="Likebook.HubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Likebook">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="24,24,24,12" Spacing="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Spacing="12">
                <FontIcon Glyph="&#xE12B;" FontSize="28"/>
                <TextBlock Text="Likebook Hub" FontSize="32" FontWeight="SemiBold"/>
            </StackPanel>

            <TextBlock Text="Escolha um site para abrir com o user-agent otimizado." FontSize="14" Opacity="0.8" TextWrapping="Wrap"/>

            <GridView x:Name="SiteList"
                      ItemsSource="{x:Bind Sites}"
                      IsItemClickEnabled="True"
                      ItemClick="SiteList_ItemClick"
                      SelectionMode="None">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid MaximumRowsOrColumns="2" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:SiteOption">
                        <Border BorderBrush="#ddd" BorderThickness="1" CornerRadius="8" Padding="16" Margin="6" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                            <StackPanel HorizontalAlignment="Center" Spacing="10">
                                <FontIcon Glyph="{x:Bind Glyph}" FontSize="32"/>
                                <TextBlock Text="{x:Bind Name}" FontSize="16" TextAlignment="Center"/>
                                <TextBlock Text="{x:Bind Description}" FontSize="12" Opacity="0.7" TextAlignment="Center" TextWrapping="Wrap" MaxWidth="200"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>
    </Grid>
</Page>
